{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-checkbox" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
          <i class="fa fa-save"></i>
        </button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
          <i class="fa fa-reply"></i>
        </a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">

    {# Alerts #}
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible">
      <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible">
      <i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    {% if test_result %}
    <div class="alert alert-info alert-dismissible">
      <i class="fa fa-info-circle"></i> {{ test_result }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    {# Main panel #}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="fa fa-pencil"></i> {{ text_edit }}
        </h3>
      </div>
      <div class="panel-body">

        {# Tabs #}
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="#tab-general" data-toggle="tab">
              <i class="fa fa-cog"></i> {{ tab_general }}
            </a>
          </li>
          <li>
            <a href="#tab-log" data-toggle="tab">
              <i class="fa fa-file-text-o"></i> {{ tab_log }}
            </a>
          </li>
        </ul>

        <div class="tab-content">

          {# ── General Tab ── #}
          <div class="tab-pane active" id="tab-general">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-checkbox" class="form-horizontal">

              {# Status #}
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="module_checkbox_status" id="input-status" class="form-control">
                    {% if module_checkbox_status %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                    {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>

              {# Login (email) #}
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-login">{{ entry_login }}</label>
                <div class="col-sm-10">
                  <input type="email"
                         name="module_checkbox_login"
                         value="{{ module_checkbox_login }}"
                         id="input-login"
                         class="form-control"
                         placeholder="cashier@example.com" />
                  {% if error_login %}
                  <div class="text-danger">{{ error_login }}</div>
                  {% endif %}
                  <span class="help-block">{{ help_login }}</span>
                </div>
              </div>

              {# Password #}
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-password">{{ entry_password }}</label>
                <div class="col-sm-10">
                  <input type="password"
                         name="module_checkbox_password"
                         value="{{ module_checkbox_password }}"
                         id="input-password"
                         class="form-control"
                         autocomplete="new-password" />
                  {% if error_password %}
                  <div class="text-danger">{{ error_password }}</div>
                  {% endif %}
                  <span class="help-block">{{ help_password }}</span>
                </div>
              </div>

              {# Cash Register ID #}
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-cash-register-id">{{ entry_cash_register_id }}</label>
                <div class="col-sm-10">
                  <input type="text"
                         name="module_checkbox_cash_register_id"
                         value="{{ module_checkbox_cash_register_id }}"
                         id="input-cash-register-id"
                         class="form-control"
                         placeholder="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" />
                  <span class="help-block">{{ help_cash_register_id }}</span>
                </div>
              </div>

              {# Payment type #}
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-payment-type">{{ entry_payment_type }}</label>
                <div class="col-sm-10">
                  <select name="module_checkbox_payment_type" id="input-payment-type" class="form-control">
                    <option value="CASHLESS" {{ module_checkbox_payment_type == 'CASHLESS' ? 'selected' }}>
                      {{ text_cashless }}
                    </option>
                    <option value="CASH" {{ module_checkbox_payment_type == 'CASH' ? 'selected' }}>
                      {{ text_cash }}
                    </option>
                  </select>
                  <span class="help-block">{{ help_payment_type }}</span>
                </div>
              </div>

              {# Trigger statuses (multi-select) #}
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-trigger-statuses">{{ entry_trigger_statuses }}</label>
                <div class="col-sm-10">
                  <select name="module_checkbox_trigger_statuses[]"
                          id="input-trigger-statuses"
                          class="form-control"
                          multiple="multiple"
                          size="6">
                    {% for order_status in order_statuses %}
                      <option value="{{ order_status.order_status_id }}"
                        {% if order_status.order_status_id in module_checkbox_trigger_statuses %}selected{% endif %}>
                        {{ order_status.name }}
                      </option>
                    {% endfor %}
                  </select>
                  <span class="help-block">{{ help_trigger_statuses }}</span>
                </div>
              </div>

              {# Test connection button #}
              <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                  <a href="{{ test_url }}" class="btn btn-info">
                    <i class="fa fa-plug"></i> {{ button_test }}
                  </a>
                </div>
              </div>

            </form>
          </div>

          {# ── Log Tab ── #}
          <div class="tab-pane" id="tab-log">
            <div class="form-group">
              <div class="col-sm-12">
                <a href="{{ clear_log_url }}" class="btn btn-danger btn-sm pull-right">
                  <i class="fa fa-trash"></i> {{ button_clear_log }}
                </a>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <textarea class="form-control"
                          rows="25"
                          readonly
                          style="font-family: monospace; font-size: 12px; white-space: pre;">{{ log }}</textarea>
              </div>
            </div>
          </div>

        </div>{# /tab-content #}
      </div>{# /panel-body #}
    </div>{# /panel #}
  </div>{# /container-fluid #}
</div>{# /content #}
{{ footer }}
