{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-telegram" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if test_result %}
    <div class="alert alert-info alert-dismissible"><i class="fa fa-info-circle"></i> {{ test_result }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#tab-general" data-toggle="tab"><i class="fa fa-cog"></i> {{ tab_general }}</a></li>
          <li><a href="#tab-log" data-toggle="tab"><i class="fa fa-file-text-o"></i> {{ tab_log }}</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="tab-general">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-telegram" class="form-horizontal">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="module_telegram_status" id="input-status" class="form-control">
                    {% if module_telegram_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-bot-token">{{ entry_bot_token }}</label>
                <div class="col-sm-10">
                  <input type="text" name="module_telegram_bot_token" value="{{ module_telegram_bot_token }}" placeholder="123456789:ABCdefGHIjklMNOpqrsTUVwxyz" id="input-bot-token" class="form-control" />
                  {% if error_bot_token %}
                  <div class="text-danger">{{ error_bot_token }}</div>
                  {% endif %}
                  <span class="help-block">{{ help_bot_token }}</span>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-chat-id">{{ entry_chat_id }}</label>
                <div class="col-sm-10">
                  <input type="text" name="module_telegram_chat_id" value="{{ module_telegram_chat_id }}" placeholder="-1001234567890" id="input-chat-id" class="form-control" />
                  {% if error_chat_id %}
                  <div class="text-danger">{{ error_chat_id }}</div>
                  {% endif %}
                  <span class="help-block">{{ help_chat_id }}</span>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                  <a href="{{ test_url }}" class="btn btn-info"><i class="fa fa-paper-plane"></i> {{ button_test }}</a>
                </div>
              </div>
            </form>
          </div>
          <div class="tab-pane" id="tab-log">
            <div class="form-group">
              <div class="col-sm-12">
                <a href="{{ clear_log_url }}" class="btn btn-danger btn-sm pull-right"><i class="fa fa-trash"></i> {{ button_clear_log }}</a>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <textarea class="form-control" rows="20" readonly style="font-family: monospace; font-size: 12px;">{{ log }}</textarea>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}
