<!-- VISIBLE DEBUG OUTPUT -->
<div style="background: #f0f0f0; border: 2px solid #ff0000; padding: 20px; margin: 20px; font-family: monospace; font-size: 12px;">
    <h3 style="color: #ff0000;">WD_CATEGORY_LIST DEBUG INFO</h3>

    <h4>Execution Path:</h4>
    <pre style="background: white; padding: 10px;">{{ debug_path|default('NOT SET') }}</pre>

    <h4>Module Settings:</h4>
    <pre style="background: white; padding: 10px; overflow: auto;">{{ debug_setting|raw }}</pre>

    <p><strong>Categories count:</strong> {{ categories|length }}</p>

    <h4>Debug categories raw (from getCategories):</h4>
    <pre style="background: white; padding: 10px; overflow: auto;">{% if debug_categories_raw is defined %}{{ debug_categories_raw|raw }}{% else %}NOT SET (else block did not execute){% endif %}</pre>

    <h4>Final categories array:</h4>
    <pre style="background: white; padding: 10px; overflow: auto;">{{ categories|json_encode(constant('JSON_PRETTY_PRINT'))|raw }}</pre>
</div>

<script>
console.log('WD_CATEGORY_LIST DEBUG - Template rendered');
console.log('WD_CATEGORY_LIST DEBUG - Categories data:', {{ categories|json_encode|raw }});
console.log('WD_CATEGORY_LIST DEBUG - Categories count:', {{ categories|length }});
{% for category in categories %}
console.log('Category: {{ category.name|escape('js') }}', 'category_id:', {{ category.category_id|default('null') }}, 'href:', '{{ category.href|escape('js') }}');
{% endfor %}
</script>

<div class="wd_category_feature bottom-to-top hb-animate-element" id="wd_category_feature">
  <div class="container">
<div class="row">
	<div class="box-heading">{{heading_title}}</div>
	<div class="box-desc">{{heading_desc}}</div>
			<div class="wdfcat-items">
				<div class="list_carousel row responsive clearfix">
					<div class="product-list category_list_carousel" id="wd_cat_featured">
						{% for category in categories %}
						<div class="item">
							<div class="content">
								<div class="wd_cat_content">
									<div class="cat-img">
										<a href="{{ category.href }}">
											<img src="{{ category.thumb }}" alt="{{ category.name }}" title="{{ category.name }}" class="cat_image1" />
										</a>
									</div>
									<div class="wdcat-content">
										<div class="wdcat-inner">
											<div class="cat-infor">
												<h4 class="title"><a href="{{ category.href }}" class="btn-pattern">{{ category.name }}{{ category.product_count }}</a></h4>
											</div>

											{% if category.children >= 4 %}
											<li class="cat-more">
											<a href="{{ category.href }}" class="category-viewall">Shop Now</a>
											</li>
											{% endif %}
											
										</div> 
									</div> 
								</div><!-- Caption END -->
							</div>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
			</div>
			</div>
</div>