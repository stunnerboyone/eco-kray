{{ header }}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="liqpay-redirect-page">
                <div class="liqpay-box">
                    <div class="liqpay-logo">
                        <img src="https://www.liqpay.ua/1591957628030./public/img/liqpay.svg" alt="LiqPay" onerror="this.src='catalog/view/theme/EkoKray/image/liqpay.svg'" />
                    </div>

                    <h2>{{ heading_title }}</h2>

                    <div class="order-info">
                        <p>Замовлення <strong>#{{ order_id }}</strong></p>
                        <p class="amount">{{ amount }}</p>
                    </div>

                    <p class="redirect-text">{{ text_redirect }}</p>

                    <form action="{{ action }}" method="post" id="liqpay-form">
                        <input type="hidden" name="data" value="{{ data }}" />
                        <input type="hidden" name="signature" value="{{ signature }}" />
                        <button type="submit" class="btn btn-success btn-lg btn-pay">
                            <i class="fa fa-lock"></i> {{ button_pay }}
                        </button>
                    </form>

                    <div class="security-note">
                        <i class="fa fa-shield"></i>
                        <span>Безпечна оплата через LiqPay</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.liqpay-redirect-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    padding: 40px 20px;
}

.liqpay-box {
    background: #fff;
    padding: 40px 50px;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    text-align: center;
    max-width: 450px;
    width: 100%;
}

.liqpay-logo {
    margin-bottom: 30px;
}

.liqpay-logo img {
    height: 50px;
}

.liqpay-box h2 {
    font-size: 24px;
    color: #333;
    margin-bottom: 25px;
    font-weight: 600;
}

.order-info {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 25px;
}

.order-info p {
    margin: 5px 0;
    color: #666;
}

.order-info .amount {
    font-size: 32px;
    font-weight: 700;
    color: #4CAF50;
    margin-top: 10px;
}

.redirect-text {
    color: #888;
    margin-bottom: 25px;
    font-size: 14px;
}

.btn-pay {
    background: linear-gradient(135deg, #7ab800 0%, #5a9400 100%);
    border: none;
    padding: 15px 50px;
    font-size: 18px;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 10px;
}

.btn-pay:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(122, 184, 0, 0.4);
    background: linear-gradient(135deg, #8ac910 0%, #6aa500 100%);
}

.btn-pay:active {
    transform: translateY(-1px);
}

.security-note {
    margin-top: 30px;
    color: #999;
    font-size: 13px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.security-note i {
    color: #4CAF50;
}

/* Loading animation */
.btn-pay.loading {
    pointer-events: none;
    opacity: 0.8;
}

.btn-pay.loading:after {
    content: '';
    width: 20px;
    height: 20px;
    border: 2px solid #fff;
    border-top-color: transparent;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
    margin-left: 10px;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

@media (max-width: 480px) {
    .liqpay-box {
        padding: 30px 25px;
    }

    .order-info .amount {
        font-size: 26px;
    }

    .btn-pay {
        padding: 12px 35px;
        font-size: 16px;
    }
}
</style>

<script>
// Auto-submit form after short delay (for better UX)
document.addEventListener('DOMContentLoaded', function() {
    var form = document.getElementById('liqpay-form');
    var btn = form.querySelector('.btn-pay');

    // Add loading state and submit after 1.5 seconds
    setTimeout(function() {
        btn.classList.add('loading');
        btn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Перенаправлення...';

        setTimeout(function() {
            form.submit();
        }, 500);
    }, 1500);

    // Manual submit handler
    form.addEventListener('submit', function() {
        btn.classList.add('loading');
        btn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Перенаправлення...';
    });
});
</script>
